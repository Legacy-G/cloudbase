{
  "dashboard": {
    "id": null,
    "title": "Odoo + k6 Load Test Dashboard",
    "tags": ["odoo", "k6", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "type": "timeseries",
        "title": "Odoo Pod CPU Usage",
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"odoo-prod\"}[1m]))",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "timeseries",
        "title": "Odoo Pod Memory Usage",
        "targets": [
          {
            "expr": "sum by (pod) (container_memory_usage_bytes{namespace=\"odoo-prod\"})",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "stat",
        "title": "Login Success / Fail (k6)",
        "targets": [
          { "expr": "sum(login_success)", "legendFormat": "Success" },
          { "expr": "sum(login_fail)", "legendFormat": "Fail" }
        ],
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 }
      },
      {
        "type": "timeseries",
        "title": "Latency Trend (k6)",
        "targets": [
          {
            "expr": "latency",
            "legendFormat": "Latency"
          }
        ],
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 6 }
      }
    ],
    "schemaVersion": 36,
    "version": 1
  }
}
